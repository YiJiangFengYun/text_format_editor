{
    "compilerOptions": {
        "lib": ["es2018", "dom"],
        "outDir": "./build",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react"
    },
    "include": [
        "./src/renderer/**/*",
        "./src/web_worker/**/*",
        "./types/**/*"
    ]
}